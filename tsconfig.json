{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@server/*": ["src/server/*"],
      "@web/*": ["src/web/*"],
      "@shared/*": ["src/shared/*"]
    }
  },
  "include": ["src"]
}

